{% extends '@CleverAgeEAVManagerUser/base.html.twig' %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'security.reset_password.title'|trans }}</h3>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <p><a href="{{ path('login') }}">{{ 'security.reset_password.back'|trans }}</a></p>
            <input class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit"
                   value="{{ 'security.reset_password.submit'|trans }}">
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
