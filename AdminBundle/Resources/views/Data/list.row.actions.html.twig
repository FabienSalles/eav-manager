{% spaceless %}
    <div class="btn-group btn-group-xs btn-group-nowrap">
        {% block list_row_actions %}
            {% if is_granted('edit', viewParameters.family) or is_granted('ROLE_DATA_ADMIN') %}
                {% set link_title = tryTrans([
                    'admin.family.'~viewParameters.family.code~'.edit.label',
                    'admin.'~admin.code~'.edit.label',
                    'admin.action.edit.label',
                ]) %}
                <a href="{{ entity_path(result, 'edit') }}" class="btn btn-primary" data-target="tg_right"
                   title="{{ link_title }}">
                    <i class="fa fa-edit"></i>
                </a>
            {% endif %}
            {% if is_granted('delete', viewParameters.family) or is_granted('ROLE_DATA_ADMIN') %}
                {% set link_title = tryTrans([
                    'admin.family.'~viewParameters.family.code~'.delete.label',
                    'admin.'~admin.code~'.delete.label',
                    'admin.action.delete.label',
                ]) %}
                <a href="{{ entity_path(result, 'delete') }}"
                   class="btn btn-danger" data-target="tg_right" title="{{ link_title }}">
                    <i class="fa fa-remove"></i>
                </a>
            {% endif %}
        {% endblock %}
    </div>
{% endspaceless %}
