{% set baseTemplate = baseTemplate|default(admin.baseTemplate) %}
{% extends isAjax ? 'CleverAgeEAVManagerLayoutBundle::empty_layout.html.twig'
: baseTemplate|default('CleverAgeEAVManagerAdminBundle:Base:list.html.twig') %}

{% import "CleverAgeEAVManagerLayoutBundle:Macros:utilities.html.twig" as utilities %}

{% set admin_trans_key = 'admin.' ~ admin.code ~ '.' ~ admin.currentAction.code ~ '.' %}

{% if isAjax and form is defined %}
    {% form_theme form 'CleverAgeEAVManagerLayoutBundle:Form:ajax_theme.html.twig' %}
{% endif %}

{% block flash_messages %}
    {% if not isModal %}{{ utilities.flash_messages() }}{% endif %}
{% endblock %}

{% block tg_center %}
    {% use '@CleverAgeEAVManagerAdmin/Base/partials/edit.blocks.html.twig' %}
    {% if isModal %}
        {{ block('edit_modal') }}
    {% else %}
        {{ block('edit_standard') }}
    {% endif %}
{% endblock %}

{% block additionnal_javascript %}
    {{ parent() }}
    {% if isAjax %}
        {{ utilities.update_datagrid_active_row(dataGridCode, data, data ? data.id, success, target) }}
    {% endif %}
    {{ utilities.lock_form(form.vars.attr.id, target) }}

    {% if data and success|default(false) and app.request.get('inputId') %}
        <script>
            // Launched only when inputId is set
            if (typeof $ != 'undefined') {
                var inputId = '{{ app.request.get('inputId')|escape('js') }}';
                var dataId = '{{ data.id|escape('js') }}';
                var dataLabel = '{{ data|escape('js') }}';
                var isModal = {{ isModal ? 'true' : 'false' }};
                var target = '{{ target|escape('js') }}';

                var $input = $('#' + inputId);
                if ($input.length) {
                    if ($input.is('select') && 0 == $input.find('option[value="' + dataId + '"]').length) {
                        $input.append($('<option>', {value: dataId}).text(dataLabel));
                    }
                    $input.val(dataId);
                }
                if (isModal && target) {
                    $(target).html('').modal('hide');
                }
            }
        </script>
    {% endif %}
{% endblock %}
