{% extends '@CleverAgeEAVManagerAdmin/Asset/list.html.twig' %}

{% import "CleverAgeEAVManagerLayoutBundle:Macros:utilities.html.twig" as utilities %}
{% import "@SidusDataGrid/DataGrid/datagrid.html.twig" as DataGridHelper %}

{% block tg_center %}
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-close-target="{{ target }}" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Media Selector</h4>
            </div>
            <div class="modal-body">
                {{ utilities.flash_messages() }}
                {% block datagrid %}
                    {{ DataGridHelper.render(datagrid, {inputId: inputId, family: family}) }}
                {% endblock %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-close-target="{{ target }}">Close</button>
            </div>
        </div>
    </div>
{% endblock %}
