{% use '@CleverAgeEAVManagerAdmin/Asset/partials/media.preview.html.twig' %}
{% spaceless %}
    <div class="btn-group btn-group-sm">
        {% if is_granted('edit', viewParameters.family) or is_granted('ROLE_DATA_ADMIN') %}
            {% set link_title = tryTrans([
            'admin.family.'~viewParameters.family.code~'.edit.label',
            'admin.'~viewParameters.admin.code~'.edit.label',
            'admin.action.edit.label',
            ], [], 'Edit') %}
            <a href="{{ admin_entity_path(viewParameters.admin, result, 'edit', app.request.query.all) }}"
               class="btn btn-default" data-target-element="_CURRENT_MODAL" title="{{ link_title }}">
                <i class="fa fa-edit"></i>
            </a>
        {% endif %}
        <a href="#" class="btn btn-info media-select" data-input-id="{{ app.request.query.get('inputId') }}"
           data-media-id="{{ result.id }}"
           data-media-preview="{{ block('media_preview')|escape('html_attr') }}"
           title="{{ 'admin.media.select.title' | trans }}">
            <i class="fa fa-thumb-tack"></i>
        </a>
    </div>
{% endspaceless %}
