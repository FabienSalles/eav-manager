{% extends '@CleverAgeEAVManagerAdmin/Base/partials/list.row.actions.html.twig' %}

{% block list_row_actions %}
    {% if is_granted('ROLE_ADMIN') %}
        {% set link_title = tryTrans([
        'admin.'~admin.code~'.resetPassword.label',
        'admin.action.resetPassword.label',
        ], [], 'Reset Password') %}
        <a href="{{ admin_entity_path(viewParameters.admin, result, 'resetPassword') }}"
           class="btn btn-warning" data-target-element="#tg_right" title="{{ link_title }}">
            <i class="fa fa-unlock"></i>
        </a>
    {% endif %}
    {{ parent() }}
{% endblock %}
